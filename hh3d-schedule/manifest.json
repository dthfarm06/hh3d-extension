{
  "manifest_version": 3,
  "name": "Timed URL Cycler",
  "version": "1.0.0",
  "description": "Mỗi 15 phút, lần lượt mở các URL theo danh sách, sau 60s thay thế bằng URL khác, lặp lại đến hết rồi đếm ngược lại.",
  "permissions": ["alarms", "storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Timed URL Cycler",
    "default_popup": "popup.html"
  }
}
